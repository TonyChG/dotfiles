
shopt -s expand_aliases

# some more ls aliases
alias ls='exa'
alias ll='exa -alF'
alias la='exa -a'
alias lo='exa -lhg --time-style=full-iso'
alias lg='exa -l -t modified --git'
alias lt='exa -l -T --git'

alias v="fasd -f -e nvim"
alias b="fasd -f -e bat"
alias vd="fasd -d -e nvim"
alias vim="nvim"
alias vt="vagrant"

# Workflow
alias open="xdg-open"

# Bash
alias dc="docker-compose"
alias cl="clear"
alias tree="tree -I node_modules"
alias tL="tree -L 2"
alias fdate="date +%D-%T | sed -e 's#[/:]#.#g'"

# Vagrant
alias vup="vagrant up"
alias vsync="vagrant rsync"
alias vssh="vagrant ssh"
alias vdf="vagrant destroy -f"
alias vprov="vagrant provision --provision-with"

# Xorg
alias clip="xclip -selection c "

# TMUX
alias tma="tmux attach"
alias tns="tns"
alias tnw="tnw"
alias tnwm="tnw man"

# Git
alias gst='git status'
alias gch='git checkout'
alias gcsm='git commit -s -m'
alias gcan='git commit --amend --no-edit'
alias gpfo='git push -f origin $(git rev-parse --abbrev-ref HEAD)'
alias gp='git push --progress'
alias gl='git pull'
alias gd='git diff'
alias ga='git add'
alias gaa='git add .'
alias gb='git branch -a'
alias gch='git checkout'
alias glo="git log --decorate"
alias glog="git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all --stat"
alias glg="git log --oneline --decorate --graph --all"

# Ag
alias agpy='ag --python              \
             --ignore *.sw?          \
             --ignore venv           \
             --hidden '
alias agf='ag -l             \
             --ignore .git   \
             --ignore *.sw?  \
             --hidden -g ""'
